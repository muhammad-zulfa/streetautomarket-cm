{
  "kind": "collectionType",
  "collectionName": "galleries",
  "info": {
    "singularName": "gallery",
    "pluralName": "galleries",
    "displayName": "Gallery"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "kind": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "video",
        "image"
      ]
    },
    "image": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kind"
            },
            "image"
          ]
        }
      },
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "video_link": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "kind"
            },
            "video"
          ]
        }
      },
      "maxLength": 500
    }
  }
}
